<table class="table">
  <thead>
    <tr>
      <th>Tag</th>
      <th>Source</th>
    </tr>
  </thead>

  <tbody>
    <% tags.each do |person_tag| %>
      <tr>
        <td>
          <span class="badge badge-default"><%= person_tag.tag %></span> <em><small>x</small>1</em>
        </td>
        <td><%= link_to person_tag.trigger.name, person_tag.trigger if person_tag.trigger %></td>
      </tr>
    <% end %>
  </tbody>
</table>
