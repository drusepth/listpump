<h1>
  <%= link_to 'Add a list', new_categorization_path(category_id: @category.id), class: 'btn btn-primary float-right' %>
  <%= link_to 'Edit category', edit_category_path(@category), class: 'btn float-right' %>
  <%= @category.name %>
</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Size</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @category.lists.order(:name).each do |list| %>
      <tr>
        <td><%= link_to list.name, list %></td>
        <td>names <%= pluralize list.persons.count, 'person' %></td>
        <td><%# link_to 'Edit', edit_list_path(list) %></td>
        <td><%# link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
