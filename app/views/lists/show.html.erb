<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" data-toggle="tab" href="#home" role="tab">Overview</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#stream" role="tab">
      Stream
      <span class="badge badge-default white-text <%= @inclusions.any? ? 'green' : 'red' %>"><%= @inclusions.count > 500 ? '500+' : @inclusions.count %></span>
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#people" role="tab">
      People
      <span class="badge badge-default white-text <%= @people.any? ? 'green' : 'red' %>"><%= @people.count %></span>
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#triggers" role="tab">
      Triggers
      <span class="badge badge-default white-text <%= @triggers.any? ? 'green' : 'red' %>"><%= @triggers.count %></span>
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#related-lists" role="tab">
      Related lists
      <span class="badge badge-default blue white-text">
        <%= @parent_lists.count + @child_lists.count + @sibling_lists.count %>
      </span>
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#settings" role="tab">Settings</a>
  </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="home" role="tabpanel">
    <%= render partial: 'lists/panes/overview', locals: { list: @list, triggers: @triggers } %>
  </div>
  <div class="tab-pane" id="stream" role="tabpanel">
    <%= render partial: 'lists/panes/stream', locals: { list: @list, inclusions: @inclusions } %>
  </div>
  <div class="tab-pane" id="people" role="tabpanel">
    <%= render partial: 'lists/panes/people', locals: { list: @list, people: @people } %>
  </div>
  <div class="tab-pane" id="triggers" role="tabpanel">
    <%= render partial: 'lists/panes/triggers', locals: { list: @list, triggers: @triggers } %>
  </div>
  <div class="tab-pane" id="related-lists" role="tabpanel">
    <%= render partial: 'lists/panes/related_lists', locals: { list: @list, parent_lists: @parent_lists, child_lists: @child_lists, sibling_lists: @sibling_lists } %>
  </div>
  <div class="tab-pane" id="settings" role="tabpanel">
    <%= render partial: 'lists/panes/settings', locals: { list: @list } %>
  </div>
</div>
