<table class="table">
  <thead>
    <tr>
      <th>Tag</th>
      <th>Source</th>
    </tr>
  </thead>

  <tbody>
    <% tags.each do |person_tag| %>
      <tr>
        <td><%= person_tag.tag %></td>
        <td><%= link_to person_tag.trigger.name, person_tag.trigger %></td>
      </tr>
    <% end %>
  </tbody>
</table>
