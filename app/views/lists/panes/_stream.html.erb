<table class="table">
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% inclusions.each do |inclusion| %>
      <tr>
        <td>
          <%= link_to inclusion.person.name, inclusion.person %>
          <span class="badge badge-default"><%= link_to inclusion.person.medium, "https://www.reddit.com/u/#{inclusion.person.name}", class: 'text-white' %></span>
          said
          "<blockquote style="display: inline; background: lightcyan"><%= inclusion.matched_text %></blockquote>"
          at
          <%= link_to 'this link', inclusion.source_url %>
          and activated the
          <%= link_to inclusion.trigger.name, inclusion.trigger %>
          trigger.
          <span style="color: gray; font-size: 80%">
            <%= time_ago_in_words inclusion.posted_at %> ago
          </span>
          <%= form_for inclusion, method: :put  do |f| %>
            <%= f.hidden_field :flagged_invalid_at, value: DateTime.current.to_s %>
            <%= f.submit 'Flag invalid', style: 'float: right' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
