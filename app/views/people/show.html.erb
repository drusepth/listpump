<br />
<h1>
  <%= @person.name %>
</h1>
<br />

<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" data-toggle="tab" href="#home" role="tab">Overview</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#networks" role="tab">Networks</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#lists" role="tab">
      Lists
      <span class="badge badge-default <%= @person.lists.any? ? 'badge-success' : 'badge-danger' %>"><%= @person.lists.count %></span>
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#tags" role="tab">
      Tags
      <span class="badge badge-default <%= @tags.any? ? 'badge-success' : 'badge-danger' %>"><%= @tags.count %></span>
    </a>
  </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="home" role="tabpanel">
    <%= render partial: 'people/panes/overview', locals: { person: @person } %>
  </div>
  <div class="tab-pane" id="networks" role="tabpanel">
    <%= render partial: 'people/panes/networks', locals: { person: @person } %>
  </div>
  <div class="tab-pane" id="lists" role="tabpanel">
    <%= render partial: 'people/panes/lists', locals: { person: @person } %>
  </div>
  <div class="tab-pane" id="tags" role="tabpanel">
    <%= render partial: 'people/panes/tags', locals: { tags: @tags } %>
  </div>
</div>
